
@{
    ViewData["Title"] = "Choose Your Role";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}



<div class="relative min-h-screen flex items-center justify-center py-16 px-4 overflow-hidden
            bg-gradient-to-br from-blue-100 to-indigo-50">
    <!-- Background Circles/Shapes for visual interest, similar to homepage hero -->
    <div class="absolute top-0 -left-20 w-80 h-80 bg-blue-300 opacity-20 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
    <div class="absolute -bottom-10 right-0 w-96 h-96 bg-indigo-200 opacity-20 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
    <div class="absolute -top-10 right-40 w-72 h-72 bg-purple-200 opacity-20 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>

    <div class="w-full max-w-2xl bg-white p-8 md:p-10 rounded-xl shadow-xl border-t-4 border-blue-600 relative z-10 text-center">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Welcome to YourHealth Portal!</h1>
        <p class="text-gray-600 mb-10 text-lg">
            Are you a doctor or a patient? @* UPDATED TEXT HERE *@
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Doctor Option -->
            <div class="p-6 border border-gray-200 rounded-xl hover:shadow-lg transition-shadow duration-300 flex flex-col items-center">
                <i class="fas fa-user-md text-6xl text-blue-600 mb-4"></i>
                <h2 class="text-2xl font-bold text-gray-700 mb-4">I am a Doctor</h2>
                <p class="text-gray-600 mb-6">
                    Manage your patient appointments, view medical history, and securely communicate with staff.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 mt-auto"> @* mt-auto pushes buttons to bottom *@
                    <a href="/Account/Login?role=Doctor" class="btn-primary flex-1">Login as Doctor</a>
                    <a href="/Account/Register?role=Doctor" class="btn-secondary flex-1">Register as Doctor</a>
                </div>
            </div>

            <!-- Patient Option -->
            <div class="p-6 border border-gray-200 rounded-xl hover:shadow-lg transition-shadow duration-300 flex flex-col items-center">
                <i class="fas fa-user-injured text-6xl text-secondary-color mb-4"></i> @* Using secondary-color CSS var *@
                <h2 class="text-2xl font-bold text-gray-700 mb-4">I am a Patient</h2>
                <p class="text-gray-600 mb-6">
                    Book appointments, access your medical records, review lab results, and connect with your doctors.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 mt-auto"> @* mt-auto pushes buttons to bottom *@
                    <a href="/Account/Login?role=Patient" class="btn-primary flex-1">Login as Patient</a>
                    <a href="/Account/Register?role=Patient" class="btn-secondary flex-1">Register as Patient</a>
                </div>
            </div>
        </div>
        <div class="mt-10 text-gray-600 text-sm">
            Need help? <a href="/Contact" class="text-blue-600 hover:underline">Contact Support</a>
        </div>
    </div>
</div>

@section Scripts {
}
